<Window x:Class="CidadesSC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Weather App" Height="300" Width="400" Background="#2B2B2B">
    <Grid>
        <TextBox Name="CityTextBox" Text="Digite o nome da cidade" GotFocus="CityTextBox_GotFocus" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Width="200" Background="#333333" Foreground="White" BorderBrush="DarkGray" BorderThickness="1"/>
        <Button Content="Obter Clima" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,10,0,0" Width="100" Click="GetWeatherButton_Click" Background="#007ACC" Foreground="White" BorderBrush="#007ACC" BorderThickness="1"/>
        <TextBlock Name="WeatherTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0" Width="380" TextWrapping="Wrap" Foreground="White"/>
    </Grid>
</Window>


